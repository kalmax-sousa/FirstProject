@{
    ViewData["title"] = "Cliente";
}

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 25%">
                            Nome
                        </th>
                        <th style="width: 25%">
                            E-mail
                        </th>
                        <th style="width: 15%">
                            Telefone
                        </th>
                        <th style="width: 10%">
                        </th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>
                            #
                        </td>
                        <td>
                            <a>
                                Nome Completo
                            </a>
                            <br />
                            <small>
                                Nome de usuário
                            </small>
                        </td>
                        <td>
                            <p>Email</p>
                        </td>
                        <td>
                            <p>Telefone</p>
                        </td>

                        <td class="project-actions text-right">

                            <a class="btn btn-info btn-sm" href="#">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Editar
                            </a>
                            <a class="btn btn-danger btn-sm" href="#">
                                <i class="fas fa-trash">
                                </i>
                                Apagar
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
