@{ 
    ViewData["title"] = "Usuário";
}

<div class="content" style="display: flex; flex-direction:column; align-items: center;">
    <div style="width: 60%">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Editar Usuário</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="inputName">Nome Completo</label>
                    <input type="text" id="inputName" class="form-control">
                </div>
                <div class="form-group">
                    <label for="inputNickname">Nome de Usuário</label>
                    <input type="text" id="inputNickname" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="inputEmail">E-mail</label>
                    <input type="email" id="inputEmail" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="inputPassword">Senha</label>
                    <input type="password" id="inputPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="inputPhone">Telefone</label>
                    <input type="text" id="inputPhone" class="form-control" placeholder="(00) 900000000" />
                </div>
            </div> 
        </div>
        <div class="row" style="justify-content: space-between">
            <a href="#" class="btn btn-secondary">Cancelar</a>
            <input type="submit" value="Salvar mudanças" class="btn btn-success float-right">
        </div>
    </div>
</div>